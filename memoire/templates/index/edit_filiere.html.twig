{% extends "base.html.twig" %}
{% block title %}Modifier une filière
{% endblock %}
{% block body %}
	<br>
	<h2>Modifier la filière</h2>
	<br>
	<div class="content">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">

				<br>
				{{form_start(formEdit,{'attr':{'novalidate':'novalidate'}})}}
				<div class="form-group">
					{{form_row(formEdit.codeFiliere)}}
				</div>
				<br>
				<div class="form-group">
					{{form_row(formEdit.designation)}}
				</div>
				<br>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Modifier la filière</button>
					{{form_end(formEdit)}}
					<a class="btn btn-dark" href="{{path('gest_filiere')}}">Annuler</a>
				</div>
			</div>
			<div class="col-md-3"></div>
		</div>
		<br>
	</div>
{% endblock %}
